<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--MVC 보안설정-->

    <security-constraint>
        <display-name>Prohibit Model1</display-name>
        <web-resource-collection>
            <web-resource-name>secure page</web-resource-name>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>Prohibit Model1</display-name>
        <web-resource-collection>
            <web-resource-name>free pages</web-resource-name>
            <url-pattern>/index.jsp</url-pattern>
        </web-resource-collection>
    </security-constraint>

    <!-- 로그인 여부 체크 필터 등록 -->
    <filter>
        <filter-name>CheckLoginFilter</filter-name>
        <filter-class>kr.co.farmstory2.filter.CheckLoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CheckLoginFilter</filter-name>
        <url-pattern>/board/write.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckLoginFilter</filter-name>
        <url-pattern>/board/view.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckLoginFilter</filter-name>
        <url-pattern>/board/modify.do</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>CheckLoginFilter</filter-name>
        <url-pattern>/board/delete.do</url-pattern>
    </filter-mapping>


    <!-- 인코딩 필터 등록 -->
    <filter>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>